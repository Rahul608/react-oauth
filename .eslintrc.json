{
  "env": {
    "browser": true,
    "node": true,
    "jasmine": true,
    "mocha": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "spread": true,
      "modules": true
    },
    "sourceType": "module"
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "rules": {
    "indent": [
            "error",
            2
        ],
    "linebreak-style": [
            "error",
            "unix"
        ],
    "quotes": [
            "error",
            "single"
        ],
    "semi": [
            "error",
            "always"
        ],
    "no-console": [
          "error",
      {
        "allow": ["log", "warn", "error"]
          }
        ],
    "space-before-function-paren": [
          "error",
          "always"
        ],
    "object-curly-spacing": ["error", "always"],
    "no-floating-decimal": ["error"]
  },
  "globals": {
    "_": true
  },
  "plugins": [
    "babel",
    "react"
  ]
}
